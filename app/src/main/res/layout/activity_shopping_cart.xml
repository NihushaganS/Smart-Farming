<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/lllg" >
    <TextView
        android:id="@+id/productNametitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginLeft="280dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/product_image_desc" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/decreaseQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />

            <TextView
                android:id="@+id/productQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:padding="8dp"
                android:gravity="center" />

            <Button
                android:id="@+id/increaseQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/productImage5"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:background="@drawable/tomatos"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/productName5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="0dp"
        android:text="Tomatoes"
        android:textSize="18sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/productDescription5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Freshly picked tomatoes from farm"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/productPrice5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="20USD per pack"
        android:textStyle="bold"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="100dp" />
    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Remove" />

    <ImageView
        android:id="@+id/productImage1"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/farmer"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/productName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="170dp"
        android:text="Carrots"
        android:textSize="18sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/productDescription1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Freshly picked Carrots from farm"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="200dp" />

    <TextView
        android:id="@+id/productPrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="15USD per pack"
        android:textStyle="bold"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="240dp" />
    <Button
        android:id="@+id/removeButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="170dp"
        android:text="Remove" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/cartSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:background="#EEEEEE">

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Total: $0.00"
            android:textStyle="bold" />

        <Button
            android:id="@+id/checkoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</RelativeLayout>
